{
  "clickable_minimum_required": "6.12.2",
  "builder": "cmake",
  "kill": "teleports",
  "dependencies_target": [
    "gperf",
    "libssl-dev"
  ],
  "dependencies_host": [
    "ccache"
  ],
  "libraries": {
    "tdlib-prepare": {
      "builder": "cmake",
      "src_dir": "libs/vendor/tdlib",
      "make_args": "prepare_cross_compiling",
      "dependencies_target": [
        "gperf"
      ]
    },
    "tdlib": {
      "builder": "cmake",
      "src_dir": "libs/vendor/tdlib",
      "make_args": "tdjson",
      "make_jobs": 1,
      "dependencies_target": [
        "zlib1g-dev",
        "libssl-dev",
        "gperf"
      ],
      "build_args": [
        "-DTHREADS_PTHREAD_ARG=0",
        "-DCMAKE_CROSSCOMPILING=ON"
      ]
    }
  }
}
